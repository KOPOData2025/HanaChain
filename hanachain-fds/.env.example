# Application
ENVIRONMENT=production
LOG_LEVEL=INFO
WORKERS=4

# API Configuration
API_TITLE=Hanachain FDS API
API_VERSION=1.0.0
API_PREFIX=/api/v1

# CORS
CORS_ORIGINS=https://app.hanachain.com,https://api.hanachain.com
CORS_ALLOW_CREDENTIALS=true

# ML Models
MODEL_PATH=/app/models
MODEL_VERSION=1.0.0
FRAUD_THRESHOLD=0.75

# Backend Integration
BACKEND_API_URL=http://backend:8080
BACKEND_API_TIMEOUT=30

# Database (if needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/fds

# AWS (for deployment script)
AWS_REGION=ap-northeast-2
AWS_SECRET_NAME=hanachain/prod/fds

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
